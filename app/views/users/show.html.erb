<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <br>
        <%= @user.email %>
      </h1>
      <div class="row">
      <div class="col-md-6 col-md-offset-3">
      <%= form_for(@user) do |f| %>
          <%= render 'shared/error_messages' %>

          <%= f.label :wistia_project_ID %>
          <%= f.text_field :wistia_project, class: 'form-control' %>

          <%= f.submit "Update user", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
    </section>
  </aside>
</div>