<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info" >
    <br>
    <br>
      <h1>
      <div style="color:white;">
        <%= gravatar_for @user %>
        <br>
        <%= @user.name %>
        <br>
        <%= @user.email %>
        <% if @errors  %>
          <p>THE FORM COULD NOT BE SAVED </p>
          <ul id='errors'>
          <% @errors.each do |error| %>
            <li><%= error %></li>
          <% end %>
          </ul>
        <% end %>
        <br>
      </div>

        <% if is_admin? %>
          <% if !@user.admin %>
            <%= form_for(@user) do |f| %>

              <div style="color:white;"><%= f.label :wistia_project_id %></div>
              <br>
              <%= f.text_field :wistia_project_id, class: 'form-control' %>
              
              <%= f.submit "Save", :form_class => "form-control" %>
            <% end %>
          <% end %>
        <% end %>        
      </h1>
    </section>
  </aside>
</div>