<% provide(:title, "Your Videos") %>
<section>
  <h1> Your Videos <h1>
  <h2>
      This page shows all of your videos. Underneath each video is its Wistia statistics.
  <h2>

  <%-# For Loop That Iterates Through Videos & Prints Individual Statistics -%>
  <% @video_iframe_urls.zip(@video_names, @each_video_stats).each do |video_iframe_url, video_name, each_video_stats| %>
    <iframe allow="fullscreen" class="videos" src="<%= video_iframe_url.to_s.html_safe %>"></iframe>
    <h2><b><%= video_name %></b><h2>
    <% each_video_stats.each do |key, val| %>
        <h2>
        <% if "#{key}" == "play_count" %>
            <%= "Times Played:" %>
            <br>
            <%-# Limits Decimal Places -%>
            <% if "#{val}" % 1 != 0 %>
              <%= '%.2f' % "#{val}" %>
            <% else %>
              <%= "#{val}" %>
            <% end %>
        <% elsif "#{key}" == "play_rate" %>
            <%= "Percentage of People Who Clicked Play:" %>
            <br>
            <%-# Limits Decimal Places -%>
            <% if "#{val}" % 1 != 0 %>
              <%= '%.2f' % "#{val}" %>
            <% else %>
              <%= "#{val}" %>
            <% end %>
        <% elsif "#{key}" == "hours_watched" %>
            <%= "Total Hours Watched:" %>
            <br>
            <%-# Limits Decimal Places -%>
            <% if "#{val}" % 1 != 0 %>
              <%= '%.2f' % "#{val}" %>
            <% else %>
              <%= "#{val}" %>
            <% end %>
        <% elsif "#{key}" == "engagement" %>
            <%= "Average Percentage of Video That Gets Viewed:" %>
            <br>
            <%-# Limits Decimal Places -%>
            <% if "#{val}" % 1 != 0 %>
              <%= '%.2f' % "#{val}" %>
            <% else %>
              <%= "#{val}" %>
            <% end %>
        <% elsif "#{key}" == "visitors" %>
            <%= "Number of Unique People Who Watched This Video:" %>
            <br>
            <%-# Limits Decimal Places -%>
            <% if "#{val}" % 1 != 0 %>
              <%= '%.2f' % "#{val}" %>
            <% else %>
              <%= "#{val}" %>
            <% end %>
        <% elsif "#{key}" == "actions" %>
            <% next %>
        <% else %>
            <%-# Do Nothing -%>
        <% end %>
        <h2>
    <% end %>
    <h2>
  <% end %>
</section>