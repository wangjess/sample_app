<% provide(:title, "Statistics") %>
<section>
    <h1> Total Video Statistics <h1>
    <h2>
        This page shows your total culmination of all your video statistics over time! (Whether 1 video or more!)
        <br>
        This culminates all Facebook and Wistia data. Other data can be integrated upon client request.
    <h2>

    <%-# Wistia Statistics -%>
    <h1> Wistia Statistics <h1>
    <% @statistics.each do |key, val| %>
        <h2>
        <% if "#{key}" == "load_count" %>
            <%= "Times Loaded:" %>
            <%= "#{val}" %>
        <% elsif "#{key}" == "play_count" %>
            <%= "Number of Plays:" %>
            <%= "#{val}" %>
        <% elsif "#{key}" == "hours_watched" %>
            <%= "Total Hours Watched:" %>
            <%-# Limits Decimal Places -%>
            <% if "#{val}" % 1 != 0 %>
                <%= '%.2f' % "#{val}" %>
            <% else %>
                <%= "#{val}" %>
            <% end %>
        <% elsif "#{key}" == "number_of_videos" %>
            <%= "Number of Videos:" %>
            <%= "#{val}" %>
        <% else %>
            <%-# Do Nothing -%>
        <% end %>
        <br>
        <h2>
    <% end %>
    <%-# Top Three Cities -%>
    <h2> Top Three Cities:
    <br>
        <% @topThree.each do |item| %>
            <%= item %>
            <br>
        <% end %>
    <h2>

    <%-# Facebook Statistics -%>
    <h1> Facebook Statistics <h1>
    <div>
        COMING SOON!
    </div>
</section>